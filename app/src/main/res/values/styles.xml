<resources>

    <style name="Widget.Theme.GamerLoopActivity.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/indie_flower_variable_ttf</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="TexDescription" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/rye_regular_value</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary_assent</item>
    </style>
    <style name="TextInfoGame" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/rye_regular_value</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>
    <style name="TitleInfoGame" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/ewert_regular_value</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:gravity">center</item>
    </style>

</resources>